<body>
  <header>
    <h1>🌱 Doc4Farm</h1>
    <p>AI Assistant for Farmers and Consultants</p>
  </header>

  <nav>
    <button onclick="showPage('signin')">Sign In</button>
    <button onclick="showPage('chat')">AI Chatbot</button>
    <button onclick="showPage('scan')">Plant Scanner</button>
    <button onclick="showPage('admin')">Admin</button>
  </nav>

  <!-- Sign In Page -->
  <section id="signin" class="card">
    <h2>Sign In</h2>
    <label>Choose Role:</label>
    <select id="role">
      <option value="farmer">Farmer</option>
      <option value="consultant">Consultant</option>
    </select>
    <input type="text" placeholder="Enter Username">
    <input type="password" placeholder="Enter Password">
    <button class="submit">Sign In</button>
  </section>

  <!-- AI Chatbot -->
  <section id="chat" class="card hidden">
    <h2>AI Chatbot 🤖</h2>
    <textarea id="chatInput" placeholder="Ask about farming..."></textarea>
    <button class="submit" onclick="sendMessage()">Send</button>
    <div id="chatBox"></div>
  </section>

  <!-- Plant Scanner -->
  <section id="scan" class="card hidden">
    <h2>Plant Scanner 📷</h2>
    <input type="file" accept="image/*" capture="camera">
    <button class="submit">Upload & Scan</button>
  </section>

  <!-- Admin -->
  <section id="admin" class="card hidden">
    <h2>Admin Dashboard 🔐</h2>
    <p>Manage users, ads, and consultants.</p>
    <button class="submit">View Farmers</button>
    <button class="submit">View Consultants</button>
  </section>

  <script>
    function showPage(pageId) {
      document.querySelectorAll("section").forEach(sec => sec.classList.add("hidden"));
      document.getElementById(pageId).classList.remove("hidden");
    }

    function sendMessage() {
      let input = document.getElementById("chatInput").value;
      let box = document.getElementById("chatBox");
      if(input.trim() !== ""){
        let msg = document.createElement("p");
        msg.textContent = "👤: " + input;
        box.appendChild(msg);
        let reply = document.createElement("p");
        reply.textContent = "🤖: This is a demo AI reply (connect backend later).";
        box.appendChild(reply);
      }
    }
  </script>
